<!--packageB/pages/more/more.wxml-->
<view class="moreContainer" style="flex-direction: column;" wx:for="{{info}}" wx:key="_id">
  <view class="page-area guide" style="flex-direction: column;">
    <view class="info-row" style="flex-direction: row;">
      <view class="title">发布者</view>
      <view class="content">{{item.publisher}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">事务名称</view>
      <view class="content">{{item.eventName}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">时间</view>
      <view class="content">{{item.deadline}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">地点</view>
      <view class="content">{{item.address}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">对象</view>
      <view class="content">{{item.receiver}}</view>
    </view>
  </view>

  <view class="page-area describe" style="flex-direction: row;">
      <view class="title">内容</view>
      <view class="content">{{item.content}}</view>
  </view>

  <view class="page-area create" style="flex-direction: column;">
    <view class="info-row" style="flex-direction: row;">
      <view class="title">事件状态</view>
      <view class="content">{{item.status}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">创建人</view>
      <view class="content">{{item.publisher}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">事件编号</view>
      <view class="titleContent">{{item._id}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">创建时间</view>
      <view class="content">{{item.createDate}}</view>
    </view>
    <view class="info-row" style="flex-direction: row;">
      <view class="title">IP</view>
      <view class="content">192.168.0.1</view>
    </view>
  </view>

  <view class="btn-area" style="flex-direction: row;">
    <button type="primary" class="confirm" wx:if="{{1}}" bindtap="">确认</button>
    <button type="primary" class="cancel" wx:if="{{1}}" bindtap="">取消</button>
  </view>
</view>
